<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@drawable/popup">

    <TextView
        android:id="@+id/titreTache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Aucune description"
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/inputModifTache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="Décrire la tâche..."
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnModifTache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Confirmer"
        android:textSize="18dp"
        android:backgroundTint="@color/vert"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnSupprimerTache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Supprimer tâche"
        android:textSize="18dp"
        android:backgroundTint="@color/rouge"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"/>




</LinearLayout>